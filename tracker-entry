<script>
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
//  SUPABASE CONFIG â€” replace with your values
//  Project Settings â†’ API in your Supabase dashboard
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
const SUPABASE_URL  = 'https://ngiqnwuoecrdnvoogjsc.supabase.co';
const SUPABASE_ANON = 'sb_publishable_Gd2MlGuFOJNEz_gLejUiGA_M8aSejSs';
const TABLE = 'stories';

// â”€â”€â”€ Supabase REST helpers â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
const headers = {
  'apikey': SUPABASE_ANON,
  'Authorization': `Bearer ${SUPABASE_ANON}`,
  'Content-Type': 'application/json',
  'Prefer': 'return=representation'
};

async function dbGetAll() {
  const res = await fetch(
    `${SUPABASE_URL}/rest/v1/${TABLE}?order=created_at.desc&limit=8`,
    { headers }
  );
  if (!res.ok) throw new Error(await res.text());
  return res.json();
}

async function dbInsert(story) {
  const res = await fetch(`${SUPABASE_URL}/rest/v1/${TABLE}`, {
    method: 'POST', headers,
    body: JSON.stringify(story)
  });
  if (!res.ok) throw new Error(await res.text());
  return res.json();
}

async function dbDelete(id) {
  const res = await fetch(`${SUPABASE_URL}/rest/v1/${TABLE}?id=eq.${id}`, {
    method: 'DELETE', headers
  });
  if (!res.ok) throw new Error(await res.text());
}

// â”€â”€â”€ UI helpers â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
function showToast(msg, isError = false) {
  document.getElementById('toastMsg').textContent = msg;
  const t = document.getElementById('toast');
  t.style.background = isError ? '#DC2626' : '';
  t.classList.add('show');
  setTimeout(() => t.classList.remove('show'), 2800);
}

function setLoading(on) {
  const btn = document.querySelector('.btn-add');
  btn.disabled = on;
  btn.innerHTML = on
    ? '<span class="circle" style="animation:spin 0.8s linear infinite">â†»</span> Savingâ€¦'
    : '<span class="circle">+</span> Add Story Entry';
}

// â”€â”€â”€ Render recent entries â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
function renderStories(stories) {
  document.getElementById('countPill').textContent =
    `${stories.length} recent ${stories.length===1?'story':'stories'}`;
  const el = document.getElementById('entryList');
  if (!stories.length) {
    el.innerHTML = '<div class="empty">No stories yet.<br>Fill in the form above to log your first one.</div>';
    return;
  }
  el.innerHTML = stories.map(s => `
    <div class="entry">
      <div class="dot ${s.status}"></div>
      <div class="entry-body">
        <div class="e-title">${s.story_id?`[${s.story_id}] `:''}${s.story_title}</div>
        ${s.microservice||s.sprint?`<div class="e-meta">${[s.microservice,s.sprint].filter(Boolean).join(' Â· ')}</div>`:''}
      </div>
      <div class="who-chip">${s.assignee}</div>
      <button class="del-btn" onclick="del('${s.id}')" title="Remove">Ã—</button>
    </div>
  `).join('');
}

async function loadRecent() {
  try {
    const stories = await dbGetAll();
    renderStories(stories);
  } catch(e) {
    document.getElementById('entryList').innerHTML =
      '<div class="empty" style="color:#DC2626">âš  Could not load stories. Check your Supabase config.</div>';
  }
}

async function del(id) {
  try {
    await dbDelete(id);
    showToast('Entry removed');
    loadRecent();
  } catch(e) {
    showToast('Failed to delete', true);
  }
}

// â”€â”€â”€ Form submit â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
document.getElementById('form').addEventListener('submit', async function(e) {
  e.preventDefault();
  const status = document.querySelector('input[name="status"]:checked')?.value;
  if (!status) { alert('Please select a status.'); return; }

  const story = {
    story_id:    document.getElementById('storyId').value.trim() || null,
    story_title: document.getElementById('storyTitle').value.trim(),
    microservice:document.getElementById('microservice').value.trim() || null,
    sprint:      document.getElementById('sprint').value.trim() || null,
    assignee:    document.getElementById('assignee').value.trim(),
    points:      parseInt(document.getElementById('points').value) || null,
    status,
    notes:       document.getElementById('notes').value.trim() || null,
  };

  setLoading(true);
  try {
    await dbInsert(story);
    this.reset();
    showToast('âœ“ Story saved successfully');
    loadRecent();
  } catch(e) {
    showToast('Failed to save. Check console.', true);
    console.error(e);
  } finally {
    setLoading(false);
  }
});

// â”€â”€â”€ Init â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
loadRecent();
</script>
